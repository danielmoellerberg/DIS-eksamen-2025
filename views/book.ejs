<section class="booking wrapper">
    <div class="booking header">
        <h1><%= experience.title %></h1>
        <p class="booking price">From DKK <%= experience.price_from || 0 %></p>
    </div>

    <div class="booking container">
        <div class="booking calendar-card">
            <div class="calendar-header">
                <button class="calendar-nav" id="prevMonth">←</button>
                <h2 class="calendar-month" id="currentMonth"></h2>
                <button class="calendar-nav" id="nextMonth">→</button>
            </div>
            
            <div class="calendar-weekdays">
                <div>Mon</div>
                <div>Tue</div>
                <div>Wed</div>
                <div>Thu</div>
                <div>Fri</div>
                <div>Sat</div>
                <div>Sun</div>
            </div>
            
            <div class="calendar-grid" id="calendarGrid">
                <!-- Kalenderen bliver genereret via JavaScript -->
            </div>
            
            <div class="calendar-legend">
                <div class="legend-item">
                    <span class="legend-dot few-spots"></span>
                    <span>Few seats left</span>
                </div>
                <div class="legend-item">
                    <span class="legend-dot unavailable"></span>
                    <span>Unavailable</span>
                </div>
            </div>
        </div>

        <div class="booking form-card">
            <form id="bookingForm" class="booking-form" method="POST" action="/api/bookings/create-and-redirect">
                <input type="hidden" id="experienceId" name="experienceId" value="<%= experience.id %>">
                <input type="hidden" id="selectedDate" name="bookingDate">
                <input type="hidden" id="basePrice" value="<%= experience.price_from || 0 %>">
                
                <div class="form-group">
                    <label for="customerName">Navn *</label>
                    <input type="text" id="customerName" name="customerName" required>
                </div>
                
                <div class="form-group">
                    <label for="customerEmail">Email *</label>
                    <input type="email" id="customerEmail" name="customerEmail" required>
                </div>
                
                <div class="form-group">
                    <label for="customerPhone">Telefon</label>
                    <input type="tel" id="customerPhone" name="customerPhone">
                </div>
                
                <div class="form-group">
                    <label for="numberOfParticipants">Antal deltagere *</label>
                    <input type="number" id="numberOfParticipants" name="numberOfParticipants" min="1" value="1" required>
                </div>
                
                <div class="form-group">
                    <label for="totalPrice">Total pris</label>
                    <input type="hidden" id="totalPriceHidden" name="totalPrice" value="<%= experience.price_from || 0 %>">
                    <input type="text" id="totalPrice" readonly value="<%= experience.price_from || 0 %> DKK">
                </div>
                
                <button type="submit" class="booking-submit-btn" id="submitBtn" disabled>
                    Book now
                </button>
            </form>
            
            <div id="bookingMessage" class="booking-message"></div>
        </div>
    </div>
</section>

<script>
    // Booking kalender funktionalitet
    (function() {
        const experienceId = document.getElementById('experienceId').value;
        const basePrice = parseFloat(document.getElementById('basePrice').value);
        // Start i den aktuelle måned (eller december 2025 hvis det er senere)
        const today = new Date();
        const decemberStart = new Date(2025, 11, 1);
        const startMonth = today > decemberStart ? today : decemberStart;
        let currentDate = new Date(startMonth.getFullYear(), startMonth.getMonth(), 1);
        let selectedDate = null;
        let availableDates = [];
        
        const calendarGrid = document.getElementById('calendarGrid');
        const currentMonthEl = document.getElementById('currentMonth');
        const prevBtn = document.getElementById('prevMonth');
        const nextBtn = document.getElementById('nextMonth');
        const selectedDateInput = document.getElementById('selectedDate');
        const numberOfParticipantsInput = document.getElementById('numberOfParticipants');
        const totalPriceInput = document.getElementById('totalPrice');
        const submitBtn = document.getElementById('submitBtn');
        const bookingForm = document.getElementById('bookingForm');
        const bookingMessage = document.getElementById('bookingMessage');
        
        // Minimum dato (i dag eller 1. december 2025, hvis det er senere)
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        const decemberStart = new Date(2025, 11, 1);
        decemberStart.setHours(0, 0, 0, 0);
        const minDate = today > decemberStart ? today : decemberStart;
        
        // Render kalender med placeholder mens data hentes
        function renderCalendarPlaceholder() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'];
            currentMonthEl.textContent = `${monthNames[month]} ${year}`;
            
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const daysInMonth = lastDay.getDate();
            const startingDayOfWeek = (firstDay.getDay() + 6) % 7;
            
            calendarGrid.innerHTML = '';
            
            for (let i = 0; i < startingDayOfWeek; i++) {
                const cell = document.createElement('div');
                cell.className = 'calendar-day empty';
                calendarGrid.appendChild(cell);
            }
            
            for (let day = 1; day <= daysInMonth; day++) {
                const cell = document.createElement('div');
                const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
                const dateObj = new Date(year, month, day);
                
                // Tjek om datoen er før 1. december 2025
                if (dateObj < minDate) {
                    cell.className = 'calendar-day past';
                    cell.textContent = day;
                } else {
                    // Vis som tilgængelig placeholder (bliver opdateret når data kommer)
                    cell.className = 'calendar-day available';
                    cell.textContent = day;
                    cell.dataset.date = dateStr;
                    // Tilføj event listener så datoer kan klikkes med det samme
                    cell.addEventListener('click', () => selectDate(dateStr, cell));
                }
                
                calendarGrid.appendChild(cell);
            }
        }
        
        // Hent tilgængelige datoer fra API
        async function fetchAvailableDates() {
            try {
                const response = await fetch(`/api/bookings/available/${experienceId}`);
                const data = await response.json();
                if (data.success) {
                    availableDates = data.dates;
                    renderCalendar();
                    
                    // Hvis der er en valgt dato, marker den igen efter render
                    if (selectedDate) {
                        const selectedCell = calendarGrid.querySelector(`[data-date="${selectedDate}"]`);
                        if (selectedCell) {
                            selectedCell.classList.add('selected');
                        }
                    }
                }
            } catch (error) {
                console.error('Fejl ved hentning af datoer:', error);
                // Render kalender alligevel med placeholder
                renderCalendar();
            }
        }
        
        // Render kalender
        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            // Opdater måned/år tekst
            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                'July', 'August', 'September', 'October', 'November', 'December'];
            currentMonthEl.textContent = `${monthNames[month]} ${year}`;
            
            // Første dag i måneden
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const daysInMonth = lastDay.getDate();
            const startingDayOfWeek = (firstDay.getDay() + 6) % 7; // Mandag = 0
            
            calendarGrid.innerHTML = '';
            
            // Tomme celler før månedens start
            for (let i = 0; i < startingDayOfWeek; i++) {
                const cell = document.createElement('div');
                cell.className = 'calendar-day empty';
                calendarGrid.appendChild(cell);
            }
            
            // Dage i måneden
            for (let day = 1; day <= daysInMonth; day++) {
                const cell = document.createElement('div');
                const dateStr = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
                const dateObj = new Date(year, month, day);
                
                // Tjek om datoen er før 1. december 2025
                if (dateObj < minDate) {
                    cell.className = 'calendar-day past';
                    cell.textContent = day;
                } else {
                    // Tjek om datoen er tilgængelig (enten fra API eller som placeholder)
                    const availableDate = availableDates.find(d => d.date === dateStr);
                    const isAvailable = availableDate && availableDate.available;
                    
                    // Hvis ingen data endnu, vis som tilgængelig (placeholder)
                    if (availableDates.length === 0 || isAvailable) {
                        cell.className = 'calendar-day available';
                        if (availableDate && availableDate.fewSpotsLeft) {
                            cell.classList.add('few-spots');
                            const dot = document.createElement('span');
                            dot.className = 'availability-dot';
                            cell.appendChild(dot);
                        }
                        cell.textContent = day;
                        cell.dataset.date = dateStr;
                        
                        // Tjek om denne dato er valgt
                        if (selectedDate === dateStr) {
                            cell.classList.add('selected');
                        }
                        
                        // Sæt event listener
                        cell.addEventListener('click', function() {
                            console.log('Klik på dato:', dateStr); // Debug
                            selectDate(dateStr, cell);
                        });
                    } else {
                        cell.className = 'calendar-day unavailable';
                        cell.textContent = day;
                    }
                }
                
                calendarGrid.appendChild(cell);
            }
        }
        
        // Vælg dato
        function selectDate(dateStr, cellElement) {
            console.log('Dato valgt:', dateStr); // Debug log
            
            // Fjern tidligere valg
            document.querySelectorAll('.calendar-day.selected').forEach(cell => {
                cell.classList.remove('selected');
            });
            
            // Tilføj valg
            cellElement.classList.add('selected');
            selectedDate = dateStr;
            selectedDateInput.value = dateStr;
            
            console.log('selectedDate sat til:', selectedDate); // Debug log
            console.log('selectedDateInput.value:', selectedDateInput.value); // Debug log
            
            // Aktiver submit knap
            submitBtn.disabled = false;
            submitBtn.style.cursor = 'pointer';
            submitBtn.style.background = '#06290f'; // Sæt grøn farve
            submitBtn.style.color = 'white';
            
            console.log('Submit knap aktiveret:', submitBtn.disabled); // Debug log
            
            // Beregn og opdater pris
            calculateTotalPrice();
            
            // Gem valgt dato i localStorage for at bevare den ved refresh/navigation
            localStorage.setItem('selectedBookingDate', dateStr);
            
            // Vis bekræftelse
            bookingMessage.textContent = `Dato valgt: ${dateStr}`;
            bookingMessage.className = 'booking-message success';
        }
        
        // Beregn total pris
        function calculateTotalPrice() {
            if (!selectedDate) return;
            const participants = parseInt(numberOfParticipantsInput.value) || 1;
            const total = basePrice * participants;
            totalPriceInput.value = `${total.toFixed(2)} DKK`;
            // Opdater hidden input til form submit
            const totalPriceHidden = document.getElementById('totalPriceHidden');
            if (totalPriceHidden) {
                totalPriceHidden.value = total.toFixed(2);
            }
        }
        
        // Måned navigation
        prevBtn.addEventListener('click', () => {
            const newDate = new Date(currentDate);
            newDate.setMonth(currentDate.getMonth() - 1);
            // Forhindre navigation før minimum dato
            const newMonthStart = new Date(newDate.getFullYear(), newDate.getMonth(), 1);
            if (newMonthStart >= minDate) {
                currentDate = newDate;
                renderCalendar();
            }
        });
        
        nextBtn.addEventListener('click', () => {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        });
        
        // Opdater pris når antal deltagere ændres
        numberOfParticipantsInput.addEventListener('change', calculateTotalPrice);
        
        // Submit booking form - redirect til betalingsside
        bookingForm.addEventListener('submit', (e) => {
            if (!selectedDate || !selectedDateInput.value) {
                e.preventDefault();
                bookingMessage.textContent = 'Vælg venligst en dato';
                bookingMessage.className = 'booking-message error';
                return;
            }
            
            // Valider at alle påkrævede felter er udfyldt
            const customerName = document.getElementById('customerName').value.trim();
            const customerEmail = document.getElementById('customerEmail').value.trim();
            const numberOfParticipants = parseInt(numberOfParticipantsInput.value);
            
            if (!customerName || !customerEmail || !numberOfParticipants || numberOfParticipants < 1) {
                e.preventDefault();
                bookingMessage.textContent = 'Udfyld venligst alle påkrævede felter';
                bookingMessage.className = 'booking-message error';
                return;
            }
            
            // Opdater totalPrice hidden input før submit
            const totalPriceHidden = document.getElementById('totalPriceHidden');
            if (totalPriceHidden) {
                const total = basePrice * numberOfParticipants;
                totalPriceHidden.value = total.toFixed(2);
            }
            
            // Formen submitter normalt til /api/bookings/create-and-redirect
            // Controlleren håndterer redirect til betalingsside
        });
        
        // Gendan valgt dato fra localStorage hvis den findes
        const savedDate = localStorage.getItem('selectedBookingDate');
        if (savedDate) {
            selectedDate = savedDate;
            selectedDateInput.value = savedDate;
            submitBtn.disabled = false;
            submitBtn.style.cursor = 'pointer';
        }
        
        // Initialiser - vis kalender med det samme, hent data i baggrunden
        renderCalendarPlaceholder();
        fetchAvailableDates();
    })();
</script>

