<section class="payment wrapper">
    <div class="payment container">
        <div class="payment-success">
            <h1>✅ Betaling gennemført!</h1>
            <% if (booking) { %>
                <p class="booking-id">Booking ID: <strong><%= booking.id %></strong></p>
            <% } %>
        </div>
        
        <div class="payment-info">
            <p>Tak for din betaling! Din booking er nu bekræftet.</p>
            <% if (booking) { %>
                <p>Du modtager en bekræftelse på email: <strong><%= booking.customer_email %></strong></p>
            <% } %>
        </div>
        
        <div class="payment-actions">
            <a href="/" class="payment-btn primary">Tilbage til forsiden</a>
        </div>
    </div>
</section>

<style>
.payment.wrapper {
    max-width: 800px;
    margin: 120px auto 60px;
    padding: 0 24px;
}

.payment.container {
    background: white;
    border-radius: 16px;
    padding: 40px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    text-align: center;
}

.payment.container h1 {
    font-size: 32px;
    color: #06290f;
    margin-bottom: 20px;
}

.payment-success {
    text-align: center;
    margin-bottom: 30px;
}

.booking-id {
    font-size: 18px;
    color: #666;
    margin-top: 10px;
}

.booking-id strong {
    color: #06290f;
    font-size: 20px;
}

.payment-info {
    margin: 30px 0;
    color: #666;
    line-height: 1.6;
}

.payment-actions {
    margin-top: 30px;
}

.payment-btn {
    display: inline-block;
    padding: 14px 28px;
    background: #06290f;
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    transition: background 0.2s ease;
}

.payment-btn:hover {
    background: #0a3a1a;
}

.payment-btn.primary {
    background: #06290f;
    color: white;
}
</style>

