<section class="payment wrapper">
    <div class="payment container">
        <div class="payment-header">
            <h1>Betaling</h1>
            <p class="booking-id">Booking ID: <strong><%= booking.id %></strong></p>
        </div>
        
        <div class="payment-details">
            <div class="detail-row">
                <span class="detail-label">Oplevelse:</span>
                <span class="detail-value"><%= booking.experience_title %></span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Dato:</span>
                <span class="detail-value"><%= new Date(booking.booking_date).toLocaleDateString('da-DK') %></span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Antal deltagere:</span>
                <span class="detail-value"><%= booking.number_of_participants %></span>
            </div>
            <div class="detail-row total">
                <span class="detail-label">Total pris:</span>
                <span class="detail-value"><strong><%= parseFloat(booking.total_price).toFixed(2) %> DKK</strong></span>
            </div>
        </div>
        
        <div class="payment-info">
            <p>Din booking er blevet <strong>gemt i databasen</strong> og er klar til betaling.</p>
        </div>
        
        <div class="payment-actions">
            <button id="payButton" class="payment-btn primary">
                Betal med kort
            </button>
            <a href="/" class="payment-btn secondary">Tilbage til forsiden</a>
        </div>
        
        <div id="paymentMessage" class="payment-message"></div>
    </div>
</section>

<script>
    (function() {
        const payButton = document.getElementById('payButton');
        const paymentMessage = document.getElementById('paymentMessage');
        const bookingId = <%= booking.id %>;
        
        payButton.addEventListener('click', async function() {
            payButton.disabled = true;
            payButton.textContent = 'Opretter betalingssession...';
            paymentMessage.textContent = '';
            paymentMessage.className = 'payment-message';
            
            try {
                const response = await fetch('/api/payment/create-checkout-session', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ bookingId: bookingId })
                });
                
                const data = await response.json();
                
                if (response.ok && data.url) {
                    // Redirect til Stripe checkout
                    window.location.href = data.url;
                } else {
                    paymentMessage.textContent = data.error || 'Fejl ved oprettelse af betalingssession';
                    paymentMessage.className = 'payment-message error';
                    payButton.disabled = false;
                    payButton.textContent = 'Betal med kort';
                }
            } catch (error) {
                console.error('Fejl:', error);
                paymentMessage.textContent = 'Der opstod en fejl. Pr√∏v igen.';
                paymentMessage.className = 'payment-message error';
                payButton.disabled = false;
                payButton.textContent = 'Betal med kort';
            }
        });
    })();
</script>

